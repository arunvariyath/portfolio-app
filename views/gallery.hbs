<main class="page gallery-page">
    <section class="portfolio-block projects compact-grid">
        <div class="heading">
            <h2>Gallery</h2>
        </div>
        <div class="row g-0">
            {{#each galleryImages}}
            <div class="col-md-6 col-lg-4 item zoom-on-hover position-relative"><img class="img-fluid image"
                        src="{{this.imageSrc}}"><span
                        class="description"><span class="description-heading">{{this.imageTitle}}</span><span
                            class="description-body">{{this.imageDescription}}</span></span></div>
            {{/each}}
        </div>
    </section>
</main>